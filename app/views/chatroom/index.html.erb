<h2 class="ui center aligned large icon header more-space">
  <i class="circular inverted red sun outline icon"></i>
  ChatMe Say something
</h2>

<div class="ui two column grid">

  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
        <div class="content" id="messages">
          <div class="ui feed" id="message-container">
            <%= render @messages %>
          </div> <!-- end ui feed -->
        </div> <!-- end 12 wide column -->

      <div class="extra content">
        <%= form_for(@message, html: { class: 'ui reply form', role: 'form' }, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :message, placeholder: 'Enter a message . . .' %>
              <%= f.button '<i class="bordered red inverted icon edit"> </i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <%= link_to 'Messages', users_path, class: 'item' %>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div> <!-- end 4 column grid-->


</div> <!-- two column grid-->
