<h1 class="ui center aligned header more-space"> Welcome to ChatMeNow </h1>
<h2 class="ui center aligned large icon header">
  <i class="circular inverted red plug icon"></i>
  Log in to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui red submit button" %>
        <% end %>
      </div>

    <div class="middle aligned column">
        <%= link_to "<i class='signup icon'></i> Sign up".html_safe , signup_path, class: 'ui big red button' %>    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>

<div class="ui two column very relaxed stackable grid more-space">
  <div class="column right aligned">
    <i class="circular inverted large red user icon"> </i> <br>
    <p> <%= @users.count %> signed up users </p>
  </div>
  <div class="column left aligned">
    <i class="circular inverted large red write icon"> </i>
    <p> <%= @messages.count %> messages</p>
  </div>
</div>
